{
    "name": "querize",
    "version": "1.0.6",
    "description": "A query builder for SQL in Node.js",
    "type": "module",
    "author": "lclasser",
    "license": "ISC",
    "Keywords": [
        "mysql",
        "maria",
        "mariadb",
        "query",
        "querize",
        "sql",
        "objective"
    ],
    "devDependencies": {
        "@types/oracledb": "^6.10.1",
        "mariadb": "^3.3.1",
        "mysql2": "^3.14.4",
        "oracledb": "^6.10.0",
        "typescript": "^5.9.2"
    },
    "scripts": {
        "build:esm": "tsc --project tsconfig.esm.json",
        "build:cjs": "tsc --project tsconfig.cjs.json",
        "build:post1": "node build.cjs --copy src/package.json.cjs dist/cjs/package.json && node build.cjs --copy src/index.cjs dist/cjs/index.cjs ",
        "build:post2": "node build.cjs --copy README.md dist/README.md",
        "clean": "node build.cjs --clean dist/cjs && node build.cjs --clean dist/esm",
        "watch": "tsc -w",
        "build": "npm run build:esm && npm run build:cjs && npm run build:post1 && npm run build:post2",
        "check": "cd dist && npm pack --dry-run",
        "preview": "cd dist && npm publish --dry-run",
        "publish": "cd dist && npm publish"
    },
    "files": [
        "dist/"
    ],
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/itfin-git/Querize"
    }
}
